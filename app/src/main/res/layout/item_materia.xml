<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/colorGray"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textViewMateria"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Materia"
        android:textSize="25dp"
        android:textColor="@color/colorGrayDarkDark"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textViewOfertada"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="Ofertada"
        android:textSize="18dp"
        android:textColor="@color/colorGrayDark"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewMateria"/>

    <TextView
        android:id="@+id/textViewEstado"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textSize="25dp"
        android:textColor="@color/colorGrayDarkDark"
        android:gravity="center"
        android:text="Estado"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textViewEstadoEstado"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textSize="18dp"
        android:textColor="@color/colorGrayDark"
        android:gravity="center"
        android:text="Estado"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewEstado"/>

</android.support.constraint.ConstraintLayout>